<label class="switch">
    <input type="checkbox" @bind="Value">
  <span class="slider round"></span>
</label>

@code {

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    private bool _value;

    [Parameter]
    public bool Value
    {
        get { return _value; }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(_value);
            }
        }
    }

}