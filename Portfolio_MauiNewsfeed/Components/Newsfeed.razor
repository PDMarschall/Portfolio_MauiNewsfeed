@using System.ServiceModel.Syndication;
@using System.Xml;
@inject NavigationManager navigationManager

@if (Feed != null)
{
    if (Blacklist.Count() > 0 || Whitelist.Count() > 0)
    {
        foreach (SyndicationItem item in FilteredFeed.Items)
        {
            <NewsfeedItem Title="@item.Title.Text" Description="@item.Summary.Text" Link="@item.Links.FirstOrDefault().Uri.ToString()" PublicationDate="@item.PublishDate" NavigateToLink="NavigateToNewsfeedItem" />
        }
    }
    else
    {
        foreach (SyndicationItem item in Feed.Items)
        {
            <NewsfeedItem Title="@item.Title.Text" Description="@item.Summary.Text" Link="@item.Links.FirstOrDefault().Uri.ToString()" PublicationDate="@item.PublishDate" NavigateToLink="NavigateToNewsfeedItem" />
        }
    }
}

@code {

    [Parameter]
    public string FeedUrl { get; set; }

    [Parameter]
    public List<string> Whitelist { get; set; } = new List<string>();

    [Parameter]
    public List<string> Blacklist { get; set; } = new List<string>();

    public SyndicationFeed Feed { get; set; }
    public SyndicationFeed FilteredFeed { get; set; }

    protected override Task OnParametersSetAsync()
    {
        XmlReader reader = XmlReader.Create(FeedUrl);
        Feed = SyndicationFeed.Load(reader);

        foreach (SyndicationItem item in Feed.Items)
        {
            if (item.Summary == null)
            {
                item.Summary = new TextSyndicationContent("");
            }
        }
        ApplyFilter();

        return base.OnParametersSetAsync();
    }

    public void NavigateToNewsfeedItem(string url)
    {
        navigationManager.NavigateTo(url);
    }

    public void ApplyFilter()
    {
        if (Whitelist.Count() > 0 || Blacklist.Count() > 0)
        {
            FilteredFeed = Feed;
            FilteredFeed.Items = Feed.Items.Where(x =>
                Whitelist.Any(searchTerm => x.Title.Text.ToLower().Contains(searchTerm.ToLower()))
                &&
                !Blacklist.Any(searchTerm => x.Title.Text.ToLower().Contains(searchTerm.ToLower())));
        }
    }
}
