  <div class="list-group list-group-radio d-grid gap-2 border-0 w-auto">
    <div class="position-relative">
      <input class="form-check-input position-absolute top-50 end-0 me-3 fs-5" type="checkbox" id="@Id" @bind="Value">
      <label class="list-group-item py-3 pe-5" for="@Id">
        <strong class="fw-semibold">@LabelTitle</strong>
        <span class="d-block small opacity-75">@LabelMessage</span>
      </label>
    </div>
  </div>
@code {

    [Parameter, EditorRequired]
    public string Id { get; set; }

    [Parameter]
    public string LabelTitle { get; set; }

    [Parameter]
    public string LabelMessage { get; set; }

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    private bool _value;

    [Parameter]
    public bool Value
    {
        get { return _value; }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(_value);
            }
        }
    }
}
